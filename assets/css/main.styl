html
    height 100%

body
    min-height 100%
    background url("/img/pattern.jpg")

.button
    font-size 13px
    color #cbff00
    font-family 'Open Sans', sans-serif
    font-weight normal
    background #383838
    border-radius 6px
    box-shadow 1px 1px 2px 0px rgba(0, 0, 0, 75)
    border solid 3px #c8f327
    width 104px
    height 27px
    cursor pointer
    padding 0

.button:active
    font-size 11px
    height 25px
    width 102px
    margin 1px
    box-shadow 0px 0px 0px 0px rgba(0, 0, 0, 75)

.text
    background #383838
    border-radius 6px
    box-shadow 1px 1px 2px 0px rgba(0, 0, 0, 75)
    border solid 3px #c8f327
    display block
    outline none
    width 196px
    height 20px
    line-height 20px
    font-family 'Open Sans', sans-serif
    color #cbff00
    padding 0px 5px
    font-size 13px
    font-weight normal

input::-webkit-input-placeholder
    color #869D1B

input:-moz-placeholder
    color #869D1B

.form-field
    padding 5px 5px

.login-form
    width 232px
    margin 0 auto 0 auto

#login
    position absolute
    top 33%
    background #383838
    border-radius 8px
    box-shadow 1px 1px 2px 0px rgba(0, 0, 0, 75)
    border solid 3px #c8f327
    height 120px;
    padding 5px 5px
