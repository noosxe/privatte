html
    height 100%

body
    height 100%
    background url("/img/pattern.jpg")
    overflow hidden

.button
    font-size 13px
    color #cbff00
    font-family 'Open Sans', sans-serif
    font-weight normal
    background #383838
    border-radius 6px
    box-shadow 1px 1px 2px 0px rgba(0, 0, 0, 75)
    border solid 3px #c8f327
    width 104px
    height 27px
    cursor pointer
    padding 0

.button:active
    vertical-align top
    font-size 11px
    height 25px
    width 102px
    margin 1px
    box-shadow 0px 0px 0px 0px rgba(0, 0, 0, 75)

.button:disabled
    border solid 3px #aaa

.button:hover
    color #fff

.text
    background #383838
    border-radius 6px
    box-shadow 1px 1px 2px 0px rgba(0, 0, 0, 75)
    border solid 3px #c8f327
    display block
    outline none
    width 196px
    height 20px
    line-height 20px
    font-family 'Open Sans', sans-serif
    color #cbff00
    padding 0px 5px
    font-size 13px
    font-weight normal

input::-webkit-input-placeholder
    color #869D1B

input:-moz-placeholder
    color #869D1B

.form-field
    padding 5px 5px
    position relative

.login-form
    width 232px
    margin 0 auto 0 auto

#login
    position absolute
    top 33%
    background #383838
    border-radius 8px
    box-shadow 1px 1px 2px 0px rgba(0, 0, 0, 75)
    border solid 3px #c8f327
    height 120px;
    padding 5px 5px

.error-tooltip-container
    border solid 2px #C8F327
    border-radius 6px
    box-shadow 1px 1px 2px 0px rgba(0, 0, 0, 75)
    background #383838
    padding 3px 6px
    position absolute
    color #C8F327
    font-family arial
    font-size 15px
    left 225px
    width 120px
    height 17px
    top 5px
    text-align center

.error-tooltip-arrow
    width 0px
    height 0px
    position absolute
    left -13px
    top 4px
    border-style solid
    border-width 7px
    border-color transparent #383838 transparent transparent

.error-tooltip-border
    width 0px
    height 0px
    position absolute
    left -16px
    top 4px
    border-style solid
    border-width 7px
    border-color transparent #C8F327 transparent transparent

.chat-page
	position relative
	width 100%
	height 100%

.header
	height  53px 
	position  absolute 
	top  -5px 
	left  3px 
	right  3px 
	border-left  solid 2px #c7f228 
	border-right  solid 2px #c7f228 
	border-bottom  solid 2px #c7f228 
	background  #4c4c4c 
	border-bottom-right-radius  3px 
	border-bottom-left-radius  3px 
	-webkit-box-shadow  inset 0px 1px 3px 1px #000 
	-moz-box-shadow  inset 0px 1px 3px 1px #000 
	box-shadow  inset 0px 1px 3px 1px #000

.footer
	bottom -5px
	height 70px
	left 3px
	right 3px
	position absolute
	border-left solid 2px #c7f228
	border-right solid 2px #c7f228
	border-top solid 2px #c7f228
	background #4c4c4c
    border-top-right-radius 3px
	border-top-left-radius 3px
	box-shadow inset 0px 1px 3px 1px #000

.left
	position absolute
	top 55px
	bottom 72px
	left 3px
	right 285px
	outline none
	width auto !important

.right
	position absolute
	right -5px
	width 283px
	top 55px
	bottom 72px
	border-left solid 2px #c7f228
	border-bottom solid 2px #c7f228
	border-top solid 2px #c7f228
	background #4c4c4c
	border-top-left-radius 3px
	border-bottom-left-radius 3px
	box-shadow inset 0px 1px 3px 1px #000

.footer-content
	height 100%
	position relative

.message-thread
	margin 0
	padding 0 0 20px 0

.message-thread li
	list-style none
	color #c7f228
	font-family arianamu, Arial
	padding 0 0 0 5px
	word-wrap break-word
	word-break break-all


.chat-input-wrapper
	border solid 2px #c7f228
	border-radius 3px
	-webkit-border-radius 3px
	-moz-border-radius 3px
	position absolute
	top 18px
	height 26px
	left 65px
	right 337px
	box-shadow 0px 0px 1px 1px #000
	padding 0 4px

.chat-input
	background none
	border none
	width 100%
	height 100%
	color #c7f228
	font-weight bold
	font-size 14px
	padding 0
	margin 0
	font-family arianamu, Arial
	outline none

.send-button
	width 26px
	height 26px
	background url('/img/send-button.png') no-repeat 4px 2px
	border solid 2px #c7f228
	border-radius 3px
	box-shadow  0px 0px 1px 1px #000
	position absolute
	top 18px
	right 300px
	cursor pointer

.send-buttonactive
	background url('/img/send-button-pressed.png') no-repeat 4px 2px

.exit-button 
	width 26px
	height 26px
	background url('/img/exit-button.png') no-repeat 2px 1px
	position absolute
	top 16px
	right 20px
	cursor pointer


.exit-buttonactive 
	background url('/img/exit-button-pressed.png') no-repeat 2px 1px
