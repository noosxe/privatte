extends ../common/main

block content
    img.logo(src="/static/images/logo.png")(width="41%")
    .login-box
        form#login-form(name="login-form")(action="/login-action")(method="post")
            input.login-hash(type="hidden")(value="")
            .login-input-wrapper
                input.login-input(type="text")(name="username")(placeholder="Username")(autocomplete="off")(min="3")(max="32")(message="Please fill in")(maxlength="32")
            .login-input-wrapper
                input.login-input(type="password")(name="password")(placeholder="Password")(autocomplete="off")(min="5")(max="32")(message="Please fill in")(maxlength="32")
            input.login-button(type="submit")(name="login")(value="Login")
            input.login-button(type="button")(name="restore")(value="Forget Pass")
